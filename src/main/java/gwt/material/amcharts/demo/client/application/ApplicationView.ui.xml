<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:with field="res" type="gwt.material.amcharts.demo.client.resources.AppResources"/>
    <ui:style gss="true">
        body {
            background: #e9e9e9;
        }
    </ui:style>
    <m:MaterialPanel>
        <m:MaterialHeader ui:field="header">
            <m:MaterialNavBar ui:field="navBar" depth="999" layoutPosition="FIXED" height="auto" activates="sidenav" backgroundColor="INDIGO">
                <m:MaterialPanel containerEnabled="true">
                    <m:MaterialNavBrand fontSize="1.6em" text="gwt-material-amcharts" />
                    <m:MaterialNavSection float="RIGHT">
                        <m:MaterialRow marginTop="20">
                            <m:MaterialChip ui:field="charts" text="Charts" waves="DEFAULT" marginRight="20" letter="C" backgroundColor="INDIGO_DARKEN_3" letterBackgroundColor="INDIGO_LIGHTEN_3" textColor="WHITE" />
                            <m:MaterialChip ui:field="maps" text="Maps" waves="DEFAULT" marginRight="20" letter="M" backgroundColor="INDIGO_DARKEN_3" letterBackgroundColor="INDIGO_LIGHTEN_3" textColor="WHITE" />
                            <m:MaterialChip ui:field="stock" text="StockCharts" waves="DEFAULT" marginRight="20" letter="S" backgroundColor="INDIGO_DARKEN_3" letterBackgroundColor="INDIGO_LIGHTEN_3" textColor="WHITE" />
                            <m:MaterialChip ui:field="api" text="API" waves="DEFAULT" marginRight="20" letter="A" backgroundColor="INDIGO_DARKEN_3" letterBackgroundColor="INDIGO_LIGHTEN_3" textColor="WHITE" />
                        </m:MaterialRow>
                    </m:MaterialNavSection>

                    <m:MaterialNavContent paddingTop="64" paddingBottom="0" display="BLOCK">
                       <m:MaterialPanel>
                            <m:MaterialLabel text="Documentation for AmCharts integration to GwtMaterialDesign Project" opacity="0.6"/>
                        </m:MaterialPanel>

                    </m:MaterialNavContent>
                </m:MaterialPanel>
            </m:MaterialNavBar>
        </m:MaterialHeader>

        <m:MaterialContainer ui:field="container" paddingTop="120"  addStyleNames="container" />
    </m:MaterialPanel>
</ui:UiBinder>
